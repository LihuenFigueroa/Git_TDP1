	/////////////////////////////////////////////////////

	//////////////	COMUNICACION - INIT /////////////////
	comFSM.comFSM_Init();
	/////////////////////////////////////////////////////

	///////////////		KEYPAD	- INIT		/////////////////
	keypad
	/////////////////////////////////////////////////////
	state=STATE_NORMAL;

}


